<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Account__c</field>
        <field>Account_Number__c</field>
        <field>Eligibility_Override_Request_Date__c</field>
        <field>Eligibility_Override_Request_Reason__c</field>
        <field>Eligibility_Type__c</field>
        <field>Elligible_for_Adders__c</field>
        <field>Override_Eligibility__c</field>
        <field>Override_Valid_From__c</field>
        <field>Override_Valid_Till__c</field>
        <field>Program_Name__c</field>
        <field>Review_Date__c</field>
        <field>Review_Decision_Reason__c</field>
        <field>Review_Result__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>turlapatirev@coned.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Approval_Notification_for_Override_request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Eligibility_Rule__c.Eligibility_Override_Request_Date__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Eligibility_Rule__c.Eligibility_Override_Request_Reason__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>End_Date_update</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_Eligibility_Override_Request_Approval_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Valid_From_Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Override Reqqest for Eligibility</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>