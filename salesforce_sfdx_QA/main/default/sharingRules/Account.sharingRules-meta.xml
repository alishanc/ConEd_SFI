            <guestUser>home</guestUser>
        </sharedTo>
        <criteriaItems>
            <field>vlocity_cmt__Status__c</field>
            <operation>equals</operation>
            <value>Application Received</value>
        </criteriaItems>
        <includeHVUOwnedRecords>false</includeHVUOwnedRecords>
